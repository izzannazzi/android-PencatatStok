<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stokBarangList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/biodata"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@id/stokBarangList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biotada"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addStokBarang"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="338dp"
            android:layout_marginBottom="230dp"
            app:srcCompat="@drawable/ic_add_plus_button" />
    </RelativeLayout>

</LinearLayout>

